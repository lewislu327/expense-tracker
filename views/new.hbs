<div class="container">
  <form action="/" method="POST">
    <div class="row">
      <div class="col-4 text-danger h6 text-right mt-5 pr-4">*必填項目</div>
      <div class="col-4 title d-flex justify-content-center my-2">
        <h1>請輸入你的支出</h1>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-4 text-right">
        <label for="input-item" class="col-form-label">*項目名稱：</label>
      </div>
      <div class="col-4">
        <input type="text" id="input-name" name="name" class="form-control" aria-describedby="itemHelp" required>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-4 text-right">
        <label for="input-date" class="col-form-label">*日期：</label>
      </div>
      <div class="col-4">
        <input type="date" id="input-item" name="date" class="form-control" aria-describedby="itemHelp" required>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-4 text-right">
        <label for="input-category" class="col-form-label">*類別：</label>
      </div>
      <div class="col-4">
        <select name="category" id="input-category"   class="btn btn-outline-dark w-50" required>
          <option value="" disabled selected hidden>-- Select --</option>
          <option value="house">-- 家居物業 --</option>
          <option value="traffic">-- 交通出行 --</option>
          <option value="entertainment">-- 休閒娛樂 --</option>
          <option value="food">-- 餐飲食品 --</option>
          <option value="others">-- 其他 --</option>
        </select>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-4 text-right">
        <label for="input-cost" class="col-form-label">*金額：</label>
      </div>
      <div class="col-4">
        <input type="number" min="0" max="9999999999999" class="w-50" id="input-cost" name="amount" class="form-control" aria-describedby="itemHelp" required>
      </div>
    </div>
    <div class="row my-5 d-flex justify-content-center">
      <button class="btn btn-success w-25" type="submit">新增支出</button>
    </div>
  </form>
</div>


